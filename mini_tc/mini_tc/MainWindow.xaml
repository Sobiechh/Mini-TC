<Window x:Class="mini_tc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mini_tc"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:vm="clr-namespace:mini_tc.ViewModel"
        xmlns:resx="clr-namespace:mini_tc.Properties"
        xmlns:controls="clr-namespace:mini_tc.View"
        mc:Ignorable="d"
        Title="Piotr Sobieszczyk miniCommander" Height="550" Width="1100">

    <Window.Resources>
        <vm:MainViewModel x:Key="MainViewModel"/>
        <vm:SideViewModel x:Key="SideViewModel"/>
    </Window.Resources>

    <Grid>
        <Grid.DataContext>
            <vm:MainViewModel/>
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!--LEFT SIDE-->
            <controls:SidePanel Grid.Column="0" CurrentPath="{Binding LeftPanel.CurrentPath}" AvailableDrives="{Binding LeftPanel.AvailableDrives}" 
                              CurrentPathContent="{Binding LeftPanel.CurrentPathContent}" SelectedPath="{Binding LeftPanel.SelectedPath,Mode=TwoWay}" 
                              SelectedDrive="{Binding LeftPanel.SelectedDrive,Mode=TwoWay}" DropDownOpen="{Binding LeftPanel.DropDownOpen}" 
                              SelectionChange="{Binding LeftSelectionChange}" ItemDoubleClick="{Binding LeftPanel.ItemDoubleClick}" ItemEnterKey="{Binding LeftPanel.ItemEnterKey}"/>

            <!--RIGHT SIDE-->
            <controls:SidePanel Grid.Column="1" CurrentPath="{Binding RightPanel.CurrentPath}" AvailableDrives="{Binding RightPanel.AvailableDrives}" 
                              CurrentPathContent="{Binding RightPanel.CurrentPathContent}" SelectedPath="{Binding RightPanel.SelectedPath,Mode=TwoWay}" 
                              SelectedDrive="{Binding RightPanel.SelectedDrive,Mode=TwoWay}" DropDownOpen="{Binding RightPanel.DropDownOpen}" 
                              SelectionChange="{Binding RightSelectionChange}" ItemDoubleClick="{Binding RightPanel.ItemDoubleClick}" ItemEnterKey="{Binding RightPanel.ItemEnterKey}"/>
        </Grid>

        <Button x:Name="CopyButton" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Height="50" Width="150" Margin="10" FontSize="28" 
                Content="{Binding Source={x:Static resx:Resources.ContentCopyButton}}" Command="{Binding Copy}"/>

    </Grid>

</Window>
